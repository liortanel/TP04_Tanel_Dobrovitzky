@foreach(char caracter in ViewBag.palabra)
{
  if(caracter == ViewBag.letra)
    {
        @ViewBag.letra
    }
    else
    {
        @:_
    } 
}
<form action='@Url.Action("ArriesgarLetra", "Home")' method="POST" enctype="multipart/form-data">
<p><input type= "text" name= "caracter" placeholder= "Ingrese una letra">
<input type= "submit" value= "Enviar respuesta"></p>
</form> 

